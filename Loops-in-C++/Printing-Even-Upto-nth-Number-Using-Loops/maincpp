#include <iostream>
using namespace std;
int main()
{
    // it will print even numbers from 2 to 100
    // using for loop.
    for (int a = 2; a <= 100; a += 2)
    {
        cout << a << endl;
    }
    // it will print even numbers from 102 to 200
    // using while loop.
    int b = 102;
    while (b <= 200)
    {
        cout << b << endl;
        b += 2;
    }
    // it will print even numbers from 202 to 300
    // using do-while loop.
    int c = 202;
    do
    {
        cout << c << endl;
        c += 2;
    } while (c <= 300);
}
